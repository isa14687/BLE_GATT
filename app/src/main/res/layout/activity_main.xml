<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.isa.blugatt.MainActivity">


    <TextView
            android:text="device1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
            android:text="device2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
            android:text="device3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
            android:text="N/A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/value1"
            app:layout_constraintLeft_toRightOf="@+id/textView"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>

    <TextView
            android:text="N/A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/value2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/value1"
            app:layout_constraintLeft_toRightOf="@+id/textView2"
            android:layout_marginLeft="8dp"/>

    <TextView
            android:text="N/A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/value3"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/value2"
            app:layout_constraintLeft_toRightOf="@+id/textView3"
            android:layout_marginLeft="8dp"/>
</android.support.constraint.ConstraintLayout>
